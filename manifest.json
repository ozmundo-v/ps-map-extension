{
    "name": "Boardmaster Summary",
    "description": "Summary Information for the build monitor",
    "version": "1.0",
    "manifest_version": 3,
    "options_page": "src/options.html",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting", "alarms"],
    "action": {
      "default_popup": "/src/popup.html",
      "default_icon": {
        "16": "/images/boardmaster_icon_16.png",
        "32": "/images/boardmaster_icon_32.png",
        "128": "/images/boardmaster_icon_128.png"
      }
    },
    "icons": {
      "16": "/images/boardmaster_icon_16.png",
      "32": "/images/boardmaster_icon_32.png",
      "128": "/images/boardmaster_icon_128.png"
    }
  }